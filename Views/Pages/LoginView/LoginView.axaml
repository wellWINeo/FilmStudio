<UserControl xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" x:Class="FilmStudio.Views.LoginView">
  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto" Margin="7,7">

      <TextBlock Margin="5,0" Grid.Row="0" Grid.Column="0">Login:</TextBlock>
      <TextBox Margin="5,5" x:Name="LoginBox" Grid.Row="0" Grid.Column="1" />

      <TextBlock Margin="5,5" Grid.Row="1" Grid.Column="0">Password:</TextBlock>
      <TextBox Margin="5,5" x:Name="PasswordBox" PasswordChar="*" Grid.Row="1" Grid.Column="1" />
    </Grid>
    <Button x:Name="LoginButton" HorizontalAlignment="Center">Login</Button>
  </StackPanel>
</UserControl>